@import '../../node_modules/normalize.css/normalize.css'

*
    color: white
    font-family: 'Poiret One', cursive
    user-select: none
    text-shadow: 0 0 3px rgba(0, 0, 0, 1);
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

animated-opacity()
    will-change: opacity
    transition: opacity 0.8s

html, .game
    height: 100%
    width: 100%
    background-color: #000
    background-image: linear-gradient(to top right, #003 0%, #000 100%)
    overflow: hidden

.game
    display: flex
    flex-direction: column
    justify-content: space-between

@keyframes move-clouds-back
    from
        background-position: 0 0
    to
        background-position: 10000px 0

.clouds
    position: absolute
    width: 100vw
    height: 100vh
    background: transparent url(../img/clouds.png) repeat top center
    animation: move-clouds-back 200s linear infinite
    pointer-events: none


.stars-holder-wrapper
    flex-grow: 1
    padding: 0 10px
    display: flex

.stars-holder
    flex-grow: 1
    position: relative
    animated-opacity()

.stars-holder_inactive
    pointer-events: none
    opacity: 0.5

@import controls
@import menu